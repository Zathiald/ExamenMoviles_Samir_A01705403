<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:padding="8dp"
    android:id="@+id/llCharacter">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="8dp"
        card_view:cardBackgroundColor="@color/black"> <!-- Fondo de la tarjeta -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <!-- Columna izquierda -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/IVPhoto"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:src="@mipmap/ic_launcher" />

                <TextView
                    android:id="@+id/TVName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:text="Nombre"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/TVRace"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/vegeta_blue"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Race"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/TVKi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/krillin_yellow"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Ki"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/TVMaxKi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/piccolo_green"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:text="Max Ki"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/TVGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/goku_orange"
                    android:layout_marginBottom="8dp"
                    android:text="Gender"
                    android:textAllCaps="true" />

                <TextView
                    android:id="@+id/TVAffiliation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/dragonball_bg"
                    android:layout_marginBottom="8dp"
                    android:text="Affiliation"
                    android:textAllCaps="true" />

            </LinearLayout>

            <!-- Columna del medio -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/TVDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp"
                    android:text="Description"
                    android:textAllCaps="true" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView
                    android:id="@+id/IVPlanet"
                    android:layout_width="88dp"
                    android:layout_height="88dp"
                    android:src="@mipmap/ic_launcher" /> <!-- Cambia la fuente de la imagen del planeta aquÃ­ -->

                <TextView
                    android:id="@+id/TVOriginPlanet"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_marginBottom="8dp"
                    android:text="Origin Planet"
                    android:textAllCaps="true" />
            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

